# vim: syntax=gitconfig
# File: gitconfig

[alias]
  check = "status --short --branch"
  tags = "tag --list"
  users = "shortlog --summary -"
  branches = "branch --all"
  aliases = "!git config --get-regexp alias | cut -c 7-"
  remotes = "remote -v"
  uncommit = "reset --soft HEAD~1"

[user]
  name = "Andrew Kuttor"
  email = "andrew.kuttor@gmail.com"

[github]
  user = kuttor

[branch]
  autosetupmerge = true

[merge]
  tool = vscode

[mergetool "vscode"]
  cmd = code --wait $MERGED

[diff]
  tool = vscode
  renames = copies
  mnemonicprefix = true

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[pager]
  difftool = true

[rerere]
  enabled = true
  autoupdate = 1

[advice]
  pushNonFastForward = false
  statusHints = false

[apply]
  whitespace = fix

[core]
  editor = nvim
  whitespace = trailing-space,space-before-tab
  excludesfile = $HOME/.gitignore
  attributesfile = $HOME/.gitattributes
  trustctime = false
  untrackedCache = true

[help]
  autocorrect = 1

[color]
  branch = auto
  diff = auto
  interactive = auto
  pager = true
  status = auto
  ui = auto

[web]
  browser = google-chrome


