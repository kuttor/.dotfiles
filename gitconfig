[branch]
    autosetupmerge = true

[merge]
    tool = vscode

[mergetool "vscode"]
    cmd = code --wait $MERGED

[diff]
    tool = vscode
    renames = copies
    mnemonicprefix = true

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[pager]
    difftool = true

[pull]
    rebase = true

[push]
    followTags = true

[rerere]
    enabled = true
    autoupdate = 1

[advice]
    pushNonFastForward = false
    statusHints = false

[apply]
    whitespace = fix

