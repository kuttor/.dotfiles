# Go home
alias ~="cd ~"

# List all hosts configured in SSH Config
alias ssh_host_list='grep "^Host" $HOME/.ssh/config | awk "{print $2}"'

# IDPS OnboardingCLI 
alias OnboardingCLI="python /Users/akuttor/Development/IDPS/devops/Scripts/account-onboard/OnboardingCLI.py "

# Make History simple
alias h='history'

# Setup for CustomerDB
alias ssh-tunnel="ssh -f -N ec2-user@35.165.11.61 -i ~/.ssh/IDPS-Ops.pem -t -L3307:customerdb.cybrn9mnq2o6.us-west-2.rds.amazonaws.com:3306"
customerdb="mysql -h 127.0.0.1 -P3307 -u admin -D customerdb -p"

# Upgrades all Pip packages
alias pip-upgrade="pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs pip install -U"

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec $SHELL -l"

# Color LS
colorflag="-G"
alias ls="command ls ${colorflag}"
alias la="ls -laF ${colorflag}" # all files inc dotfiles, in long format
alias lsd='ls -lF ${colorflag} | grep "^d"' # only directories

# Show open ports
alias ports='netstat -lantip'

# Colorize the grep command output for ease of use (good for log files)##
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Copy the working directory path
alias cpwd='pwd|tr -d "\n"|pbcopy'

# Find public ip
alias myip='wget http://ipinfo.io/ip -qO -'

# Quicker navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Colored up cat!
# You must install Pygments first - "sudo easy_install Pygments"
alias c='pygmentize -O style=monokai -f console256 -g'

# Main Git commands aliased
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m' # requires you to type a commit message
alias gp='git push'
alias grm='git rm $(git ls-files --deleted)'

# Trim newlines
alias tn='tr -d "\n"'

# Copy output of last command to clipboard
alias cl="fc -e -|pbcopy"

# Top
alias cpu='top -o cpu'
alias mem='top -o rsize' # memory

# Sublime command-line
alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl"

# alias iams="source iams"
