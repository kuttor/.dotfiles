# supercharge tree command
alias tree="tree -gspahDC"

# examine wifi card
alias wifi-card='lspci -nnk | grep -iA2 net'   

# supercharge list files
alias ll='ls -lahFgp'
alias la='ls -A'
alias l='ls -CF'

# history
alias h='history'

# hub for git
# alias git='hub'

# directory navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias 'bk=cd $OLDPWD'

# vimpager
alias less=$PAGER
alias zless=$PAGER

# virtualenv
alias v='workon'
alias v.deactivate='deactivate'
alias v.mk='mkvirtualenv'
alias v.rm='rmvirtualenv'
alias v.switch='workon'
alias v.add2virtualenv='add2virtualenv'
alias v.cdsitepackages='cdsitepackages'
alias v.cd='cdvirtualenv'
alias v.lssitepackages='lssitepackages'

# find public ip 
alias myip='wget http://ipinfo.io/ip -qO -'
