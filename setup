#!/usr/bin/env bash
# file: install.sh
# info: creates necessary links/files to setup dotfiles and install packages

# Homebrew
#/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# Zinit
sh -c "$(curl -fsSL https://raw.githubusercontent.com/zdharma/zinit/master/doc/install.sh)"

# Brew
brew bundle --file "$HOME/.dotfiles/BrewFile"

# Fonts
cp -R "$HOME/.dotfiles/fonts" "$HOME/Library/Fonts/"

ln -fs "$HOME/.dotfiles/zshrc"     "$HOME/.zshrc"I

for config in `ls $HOME/.dotfiles/configs`; do
    ln -fs $config $HOME/.$config
done

# Hushes initial terminal session messages
touch "$HOME/.hushlogin"
