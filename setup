#!/usr/bin/env zsh

test -e "$ZINIT[BIN_DIR]/zinit.zsh" &&\
    sh -c "$(curl -fsSL https://raw.githubusercontent.com/zdharma/zinit/master/doc/install.sh)"

# Setting MOTD
cat < EOF > "/etc/motd"
#! /usr/bin/env bash

fortune -aeso | cowsay -d | lolcat
EOF

# Create ZSHRC
cat < EOF > "$HOME/.zshrc"
#! /usr/bin/env bash

SOURCES="${0%/*}/ZSH"
source "$SOURCES/zinit"
source "$SOURCES/env"
source "$SOURCES/aliases"
source "$SOURCES/completes"
source "$SOURCES/keybind"
EOF
