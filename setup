#!/usr/bin/env bash
# file: install.sh
# info: creates necessary links/files to setup dotfiles and install packages

# Homebrew
#/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# Zinit
sh -c "$(curl -fsSL https://raw.githubusercontent.com/zdharma/zinit/master/doc/install.sh)"

# HBrew Bundle
#$HOME/.dotfiles/BrewFile

# /bin/ZSH
chsh -s `whereis zsh`

# Fonts
cp -r $HOME/.dotfiles/fonts/* /usr/share/fonts/

echo "Setting up simlinks..."
ln -fs "$HOME/.dotfiles/zshrc"         "$HOME/.zshrc"I

for config in configs
do



ln -fs "$HOME/.dotfiles/editorconfig"  "$HOME/.editorconfig"
ln -fs "$HOME/.dotfiles/gitconfig"     "$HOME/.gitconfig"
ln -fs "$HOME/.dotfiles/bat.conf "     "$HOME/.bat.conf"
ln -fs "$HOME/.dotfiles/gitignore"     "$HOME/.gitignore"
ln -fs "$HOME/.dotfiles/inputrc"       "$HOME/.inputrc"
ln -fs "$HOME/.dotfiles/ripgreprc"     "$HOME/.ripgreprc"
ln -fs "$HOME/.dotfiles/curlrc"        "$HOME/.curlrc"

# Cache file for Z.Lua
touch "$HOME/.config/z.cache"

# Hushes initial terminal session messages
touch "$HOME/.hushlogin"
