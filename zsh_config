
# Name: Andrew Kuttor
# Mail: andrew.kuttor@gmail.com

# One-Liner install for Oh My Zsh:
    # sh -c "$(curl -fsSL https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

# Sourcing the Oh My Zshell goodness
export ZSH=$HOME/.oh-my-zsh


# ZMV
autoload zmv
alias zcp='zmv -C'
alias zln='zmv -L'

# Path additions
# export PATH=$HOME/bin:/usr/local/bin:$PATH
export PATH="/usr/local/opt/binutils/bin:$PATH"
export PATH="/usr/local/sbin:$PATH"
export PATH="/Users/yeti/Library/Python/2.7/bin:$PATH"
export MANPATH="/usr/local/man:$MANPATH"

# Set Options
setopt prompt_subst
setopt complete_in_word
setopt always_to_end
setopt notify
setopt local_options
setopt complete_aliases
setopt nohup

# Shell Theme 
ZSH_THEME="robbyrussell"

# Little extras
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"
ENABLE_CORRECTION="true"

# History Config
setopt extended_history       # Adds more stuff, like timestamps
setopt hist_find_no_dups      # Duplicate killer
setopt hist_ignore_all_dups   # remove older duplicate entries from history
setopt hist_reduce_blanks     # remove superfluous blanks from history items
setopt inc_append_history     # save history entries as soon as they are entered
setopt share_history          # Share the same history file between sessions
HIST_STAMPS="11/19/2018"
HISTFILE=~/.zhistory
HISTSIZE=4096
SAVEHIST=4096

# Plugins
# Standard plugins: ~/.oh-my-zsh/plugins/*
# Custom plugins:  ~/.oh-my-zsh/custom/plugins/
plugins=(
  z
  fz
  fzf-z
  git
  osx
  brew
  python
  gnu-utils
  zsh-autopair
  zsh-autosuggestions
  fast-syntax-highlighting
  zsh-async
  zsh-autosuggestions
  zsh-interactive-cd
  zsh-url-highlighter
  zsh-256color
  zsh-autopair
  zsh-bash
  zsh-syntax-highlighting
  zsh-you-should-use
  ansiblee
  vagrant
  vim
)

# Sources Oh My ZSH
source $ZSH/oh-my-zsh.sh

# FASD
eval "$(fasd --init auto)"

# Language setting
export LANG=en_US.UTF-8

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='mvim'
fi

# ssh
export SSH_KEY_PATH="~/.ssh/rsa_id"

# Custom Aliases
source $HOME/.dotfiles/aliases

# Custom Functions
source $HOME/.dotfiles/functions


# Syntax Highlighting Configurations
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern)
ZSH_HIGHLIGHT_STYLES+=(
  default                       'none'
  unknown-token                 'fg=red,bold'
  reserved-word                 'fg=yellow'
  alias                         'fg=none,bold'
  builtin                       'fg=none,bold'
  function                      'fg=none,bold'
  command                       'fg=none,bold'
  hashed-command                'fg=none,bold'
  path                          'fg=cyan'
  globbing                      'fg=cyan'
  history-expansion             'fg=blue'
  single-hyphen-option          'fg=magenta'
  double-hyphen-option          'fg=magenta'
  back-quoted-argument          'fg=magenta,bold'
  single-quoted-argument        'fg=green'
  double-quoted-argument        'fg=green'
  dollar-double-quoted-argument 'fg=cyan'
  back-double-quoted-argument   'fg=cyan'
  assign                        'none'
)

