syntax on
set autoindent
set number
set ruler
set colorcolumn=80

" show tabs
set list
set listchars=tab:\|_

set ttyfast
set mouse=a
set ttymouse=xterm2

set backspace=2 " make backspace work like most other apps
set backspace=indent,eol,start

set t_ZH=^[[3m
set t_ZR=^[[23m

highlight Comment cterm=italic
