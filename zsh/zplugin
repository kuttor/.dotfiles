#!/usr/bin/env zsh
# -*- coding: utf-8 -*-
# vim:set ft=zsh ts=2 sw=2 sts=0 foldmethod=marker

# file: zplugin
# info: Zplugin configuration

# Zplugin init
source "${HOME}/.zplugin/bin/zplugin.zsh"
autoload -Uz _zplugin
(( ${+_comps} )) && _comps[zplugin]=_zplugin

# Compinit speed up loading
ZPLGM[COMPINIT_OPTS]=-C

# Theme: Geometry
zplugin light denysdovhan/spaceship-prompt

#Archey-OSX: Provides Archey like stuff for OSX
#zplugin ice as"program" pick"bin/archey" atload"/usr/local/bin/archey -c"
#zplugin load obihann/archey-osx

# Git-Extras: Adds Git Extras
zplugin ice as"program" pick"$ZPFX/bin/git-*" make"PREFIX=$ZPFX" nocompile
zplugin light tj/git-extras

# Zsh-Completions: Various Command Completions
zplugin ice wait"0" lucid blockf
zplugin light zsh-users/zsh-completions

# You Should Use: Shows unused aliases
zplugin ice wait"0" lucid blockf
zplugin light MichaelAquilina/zsh-you-should-use

# History-Search-Multi-Word: Search multi words in history
zstyle ":history-search-multi-word" page-size "11"
zplugin ice wait"1" lucid
zplugin load zdharma/history-search-multi-word

# Zsh-Autosuggestions: Because They're Damn Cool
zplugin ice wait"0" lucid atload"_zsh_autosuggest_start"
zplugin light zsh-users/zsh-autosuggestions

# TheFuck: Typo Correction for misspelled commands
zplugin ice wait'1' lucid
zplugin light laggardkernel/zsh-thefuck

# Git: Oh-My-Zsh Version
zplugin ice svn pick"completion.zsh" src"git.zsh"
zplugin snippet OMZ::lib

# Bat: Syntax-Highlighted Cat Replacement
zplugin ice from"gh-r" as"program" mv"bat* -> bat" pick"bat/bat"
zplugin light sharkdp/bat

# RipGrep: Supercharged Grep Replacement
zplugin ice from"gh-r" as"program" mv"ripgrep* -> ripgrep" pick"ripgrep/rg"
zplugin light BurntSushi/ripgrep

# Neovim: Vim Replacement
zplugin ice from"gh-r" as"program" bpick"*appimage*" mv"nvim* -> nvim" pick"nvim"
zplugin light neovim/neovim

# Exa: LS Replacement
zplugin ice wait"2" lucid from"gh-r" as"program" mv"exa* -> exa"
zplugin light ogham/exa

# Fd: Find Replacement
zplugin ice from"gh-r" as"program" mv"fd* -> fd" pick"fd/fd"
zplugin light sharkdp/fd

# Syntax highlighter: Speed Enhanced
zplugin ice wait"0" lucid atinit"zpcompinit; zpcdreplay"
zplugin light zdharma/fast-syntax-highlighting

# LS_Colors: Trapd00r-Style Shell Coloring
zplugin ice atclone"dircolors -b LS_COLORS > clrs.zsh" \
    atpull'%atclone' pick"clrs.zsh" nocompile'!' \
    atload'zstyle ":completion:*" list-colors “${(s.:.)LS_COLORS}”'
zplugin light trapd00r/LS_COLORS

# Yank: Copy a selected output portion
zplugin ice as"program" pick"yank" make
zplugin light mptre/yank

# Git-Fast: Increase that speed
zplugin ice wait"0"
zplugin load tevren/gitfast-zsh-plugin

# Zsh-Autopair: Autoclosing them quotes
zplugin ice wait lucid
zplugin load hlissner/zsh-autopair

# Zlua: Z Replacement
zplugin ice wait"0b" lucid
zplugin light skywind3000/z.lua

# FZF: Fuzzy Finder
zplugin ice from"gh-r" as"program"
zplugin light junegunn/fzf-bin

# Git-Start-Commit: Git smart commits
zplugin ice wait"0b" lucid
zplugin light seletskiy/zsh-git-smart-commands

# FZ: Z Tab-Completions
zplugin ice wait"0" lucid
zplugin light changyuheng/fz

# Pip Completion: Oh-My-Zsh Version
zplugin ice svn pick"completion.zsh" src"git.zsh"
zplugin snippet OMZ::lib

# Turbo-enabled CompDefs
autoload -Uz compinit && compinit
#zplugin cdreplay -q
#zplugin cdlist

