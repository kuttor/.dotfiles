#!/usr/bin/env zsh
# -*- coding: utf-8 -*-
# vim:set ft=zsh ts=2 sw=2 sts=0 foldmethod=marker

# file: zinit
# info: Zinit configuration

# Zplugin init
source "${HOME}/.zinit/bin/zinit.zsh"
autoload -Uz _zinit
(( ${+_comps} )) && _comps[zinit]=_zinit

# Compinit speed up loading
ZINIT[COMPINIT_OPTS]=-C

# Theme: Spaceship
zinit light denysdovhan/spaceship-prompt

# Git-Extras: Adds Git Extras
zinit ice as"program" pick"$ZPFX/bin/git-*" make"PREFIX=$ZPFX" nocompile
zinit light tj/git-extras

# You Should Use: Shows unused aliases
zinit ice wait"0" lucid blockf
zinit light MichaelAquilina/zsh-you-should-use


# TheFuck: Typo Correction for misspelled commands
zinit ice wait'1' lucid
zinit light laggardkernel/zsh-thefuck

# LS_Colors: Trapd00r-Style Shell Coloring
zinit ice atclone"dircolors -b LS_COLORS > clrs.zsh" \
    atpull'%atclone' pick"clrs.zsh" nocompile'!' \
    atload'zstyle ":completion:*" list-colors “${(s.:.)LS_COLORS}”'
zinit light trapd00r/LS_COLORS

# Zsh-Autopair: Autoclosing them quotes
zinit ice wait lucid
zinit load hlissner/zsh-autopair

# Zlua: Z Replacement
zinit ice wait"0b" lucid
zinit light skywind3000/z.lua

# FZF: Fuzzy Finder
zinit ice from"gh-r" as"program"
zinit light junegunn/fzf-bin

# Git-Start-Commit: Git smart commits
zinit ice wait"0b" lucid
zinit light seletskiy/zsh-git-smart-commands

# FZ: Z Tab-Completions
zinit ice wait"0" lucid
zinit light changyuheng/fz

# OMZ's
zinit snippet OMZ::lib/git.zsh
zinit snippet OMZ::plugins/asdf/asdf.plugin.zsh
zinit snippet OMZ::plugins/dotenv/dotenv.plugin.zsh
zinit snippet OMZ::plugins/fzf/fzf.plugin.zsh
zinit snippet OMZ::plugins/git/git.plugin.zsh
zinit snippet OMZ::plugins/heroku/heroku.plugin.zsh
zinit snippet OMZ::plugins/safe-paste/safe-paste.plugin.zsh

# Zsh-Autosuggestions: Because They're Damn Cool
zinit ice wait lucid atload'_zsh_autosuggest_start'
zinit light zsh-users/zsh-autosuggestions
export ZSH_AUTOSUGGEST_BUFFER_MAX_SIZE=10

# Zsh-Completions: Various Command Completions
zinit ice wait lucid blockf atpull"zinit creinstall -q ."
zinit light zsh-users/zsh-completions

# Syntax highlighter: Speed Enhanced
zinit ice wait lucid atinit"ZINIT[COMPINIT_OPTS]=-C; zpcompinit; zpcdreplay" 
zinit light zdharma/fast-syntax-highlighting

# Turbo-enabled CompDefs
autoload -Uz compinit && compinit
zinit cdreplay -q
#zinit cdlist

