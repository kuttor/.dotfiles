#!/usr/bin/env zsh
# -*- coding: utf-8 -*-

# Compinit speed up loading
ZINIT[COMPINIT_OPTS]=-C

# Simplifying plugin syntax
plug() { zinit ice wait lucid "$@"; }
release="from'gh-r' as'program'"
lite="zinit light"
load="zinit load"

# Annexes
zinit light zinit-zsh/z-a-bin-gem-node
zinit light zinit-zsh/z-a-patch-dl
zinit light zinit-zsh/z-a-as-monitor

# Prompt
zi atload"!source $HOME/.p10k.zsh" nocd for "romkatv/powerlevel10k"

# FZF
zinit pack for ls_colors

# Install fzf
zinit ice from"gh-r" as"command"
zinit load junegunn/fzf-bin

# Fast Alias Tips
plug $release for \
    gsei40kr/fast-alias-tips-bin \
    gsei40kr/zsh-fast-alias-tips

# Misc 
plug for \
    hlissner/zsh-autopair \
    wfxr/forgit \
    ajeetdsouza/zoxide \
    seletskiy/zsh-git-smart-commands

# The Magic Three
plug for \
    atinit"zicompinit; zicdreplay" zdharma/fast-syntax-highlighting \
    atload"_zsh_autosuggest_start" zsh-users/zsh-autosuggestions \
    blockf atpull"zinit creinstall -q ." $lite zsh-users/zsh-completions

# Turbo-enabled CompDefs
autoload -Uz compinit && compinit
zinit cdreplay -q
